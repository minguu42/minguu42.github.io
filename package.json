{
  "name": "minguu42.github.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint:js": "eslint --ignore-path .gitignore '**/*.{js,ts,tsx}'",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.css'",
    "lint": "npm run --silent lint:js && npm run --silent lint:css",
    "fix:js": "npm run --silent lint:js -- --fix",
    "fix:css": "npm run --silent lint:css -- --fix",
    "fmt": "prettier --ignore-path .gitignore --list-different --write '**/*.{js,ts,tsx,css,json}' && npm run --silent fix:js && npm run --silent fix:css",
    "check-style": "prettier --ignore-path .gitignore --check '**/*.{js,ts,tsx,css,json}'"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "gray-matter": "^4.0.3",
    "next": "^13.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-html": "^15.0.2"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "eslint": "^8.34.0",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.4",
    "stylelint": "^15.1.0",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-order": "^6.0.2",
    "typescript": "^4.9.5"
  }
}
